<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" ID Reserva"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:layout_marginTop="50dp">
            </TextView>
            <EditText
                android:id="@+id/edit_idReserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <Button
                android:id="@+id/btn_editar_buscarReserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Buscar Reserva"
                android:textAllCaps="false"
                android:background="@android:color/holo_blue_bright">
            </Button>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" ID Libro"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:layout_marginTop="50dp">
            </TextView>
            <EditText
                android:id="@+id/edit_reserva_idLibro"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="      ID       Nombre Libro      Categoria   Editorial"
                android:textColor="@android:color/black"
                android:textSize="18dp"
                android:layout_marginTop="15dp">
            </TextView>
            <ListView
                android:id="@+id/lst_reserva_Libros"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="15dp">
            </ListView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID Estudiante"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:layout_marginTop="20dp">
            </TextView>
            <EditText
                android:id="@+id/edit_reserva_idEstudiante"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="  ID      Nombres        Carrera            Correo"
                    android:textColor="@android:color/black"
                    android:textSize="18dp">
                </TextView>

                <ListView
                    android:id="@+id/lst_reserva_Estudiantes"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="10dp">
                </ListView>
            </LinearLayout>

            <Button
                android:id="@+id/btn_editarReserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:text="Editar Reserva"
                android:textAllCaps="false"
                android:background="@android:color/holo_green_dark">
            </Button>
            <Button
                android:id="@+id/btn_eliminarReserva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Eliminar Reserva"
                android:textAllCaps="false"
                android:background="@android:color/holo_red_dark">
            </Button>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
